/* pages/register/register.wxss */
page{
  background-color:rgb(226, 247,252)
}
.registe-body {
  width: 100%;
}

.registe-desc {
  width: 100%;
  padding: 10px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.registe-desc > text {
  color:black;
  display: block;
}
.registe-desc > text:first-child {
  font-size: 14pt;
}
.registe-desc > text:last-child {
  font-size: 12pt;
}

.registe{  
  width: 90%;
  padding: 5px 0;
  margin-left: 5%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 35px;
  border-bottom: 1px solid white;
}
.registe > view:first-child {
  width: 40%;
  border-right: 1px dashed gray;
}

.registe > view:nth-child(2){
  width: 96%;
  margin-left: 2%;
}
.registe_title{
  font-size: 16pt;
}

button {
  width: 80%;
  margin: 30px 0 10px 10%;
}

.error-info {
  text-align: center;
  font-size: 12px;
  color: red;
}

checkbox .wx-checkbox-input {
  border-radius: 50%; /* 圆角 */
  width: 22px; /* 背景的宽 */
  height: 22px; /* 背景的高 */
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {

  background: #09BB07;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 22px; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 22px; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 22px;
  text-align: center;
  font-size: 13px; /* 对勾大小 30rpx */
  color: #F0FEFF; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}