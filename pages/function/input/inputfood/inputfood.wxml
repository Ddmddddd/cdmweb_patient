<!--pages/input/inputfood/inputfood.wxml-->

<view class='page'>
  <form bindsubmit='foodformSubmit' bindreset='formReset'>

    <view class="weui-cells__title">用餐时间：</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">日期</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="date" value='{{date}}' start="2017-11-1" end="2022-12-31" bindchange='bindDateChange'>
            <view class='weui-input'>{{date}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">时间</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="time" value='{{time}}' start="00:00" end="23:59" bindchange='bindTimeChange'>
            <view class='weui-input'>{{time}}</view>
          </picker>
        </view>
      </view>
    </view>

    <view class="food-list">
      <view wx:for="{{kinds}}" wx:key="this" class='food-item'>
        <view class="food-item-text">
          {{index+1}}、{{item}}{{appetite[index]}}g
          <view class='food-item-delete'>
            <text bindtap="remove" data-index="{{index}}" class="delete">删除</text>
          </view>
        </view>
      </view>
    </view>
    

    <picker mode="multiSelector" bindchange="bindMultiPickerChange2" bindcolumnchange="bindMultiPickerColumnChange2" value="{{multiIndex2}}" range="{{foodArr}}" range-key="{{'name'}}">
    
      <view class="picker" style='text-align:center;'>
        <text class='add-food-btn'>添加食物</text>
      </view>
    </picker>


    <view class="weui-cells__title">备注：</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <textarea class="weui-textarea" placeholder="若有特殊说明，请备注" style="height: 3.3em" value='{{memo}}' bindinput='bindInputCom'  />

        </view>
      </view>
    </view>

     <block wx:if="{{serialNo!=0}}">
      <button bindtap="dataManager" data-status="{{254}}" type='primary'>确定修改</button>
      <button bindtap="dataManager" data-status="{{255}}" type="warn">删除</button>    
    </block>
    <block wx:else>
      <button bindtap="dataManager" data-status="{{0}}" type='primary'>完成</button>
    </block>
  </form>
</view>