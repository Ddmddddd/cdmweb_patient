.container{
  overflow: hidden auto;
}
.search-input{
  width: 90%;
  /*height: 30px;*/
  margin: 10px auto;
  font-size: 16px;
  border-radius: 5px;
  border: 1px solid #E5E5E5;
}
.list-body{

}

.nav-person-item{
  height: 60px;
}
.list-part{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
}
.list-avatar{
  height: 40px;
  width: 40px;
  border: 1px solid #E5E5E5;
  border-radius: 40px;
}
.list-part-right{
  width: 75%;
  height: 50px;
  display: flex;
  flex-direction: column;

}
.communicate-title{
  height: 50%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.time{
  color: rgb(161, 161, 161);
  font-size: 13px;
}
.communicate-detail{
  height: 50%;
  color: #8A8A8A;
  font-size: 14px;
}
