/* pages/function/charts/bgcalendar/bgcalendar.wxss */
.calendar-container{
  width: 96vw;
  margin-left: 2vw;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
  border: 1px solid #cccccc;
  border-radius: 5px;
  background-color: white;
  /* box-shadow: 0px 0px 4px 1px #ccc; */
}
.history{
  margin-left: 5%;
}
.his-item{
  width: 650rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  margin: 15rpx 0 25rpx 0;
  }
.his-item > view:first-child{
  width: 10px;
  height: 10px;
  background-color: #33ccff;
  border-radius: 10px;
}
.content{
  width: 80%;
  height: 100%;
  margin-left: 62rpx;
  display: flex;
  align-items: center;
  background-color: white;
  border: 1px solid #33ccff;
  box-shadow: 0px 0px 4px 1px #33ccee;

}
.content text{
  width: 40%;
  color: #333;
  margin-left: 15rpx;
}