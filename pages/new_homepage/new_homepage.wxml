<!--pages/new_homepage/new_homepage.wxml-->
<view class="homepage">
    <view class="first">
      <view style="display:flex;flex-direction:column;width:500rpx;">
        <view class="top">
          <image mode="aspectFill" src="../../image/userPhoto.jpeg" />
          <view class="base">
            <text>{{nickname}}，您好</text>
            <text>慢病微管家已为您服务{{registTime}}天</text>
          </view>
        </view>
          <navigator class="today_task" url="/pages/today_task/today_task">
            <view>今日任务小结</view>
          </navigator>
      </view>
        <view class="container1">
          <circle r="85" per="30" number="未记录"/>
        </view>
    </view>
    <view class="knowledge">
      <swiper
        indicator-dots="{{true}}"
        autoplay="{{true}}"
        interval="{{3000}}"
        duration="{{1000}}"
      >
      <navigator wx:for="{{knowledge}}" wx:key="{{index}}" url='../message/mescontent/mescontent?id={{item.kno_id}}'>
        <swiper-item>
          <view class="kno_image_title">{{item.kno_name}}</view>
          <image
            style="width:100%;height:260rpx;"
            mode='widthFix'
            src="{{item.kno_link}}"
          />
        </swiper-item>
      </navigator>
    </swiper>
    </view>
    <view class="health" style="width:90%;margin-left:5%;">健康记录</view>
    <view class="record">
      <navigator class="health_card" style="background-color:#FFFFCC; " url="../function/bp/bp">
        <text style="margin-left:8rpx;">血压记录</text>
        <image src="/image/bp_record.png" class="record_png" mode="aspectFit" />
        <view class="target">
          <view>目标 {{diastolicPressureGoal}}/{{systolicPressureGoal}}</view>
          <view wx:if="{{nowDiastolicPressure!=0}}">当前 {{nowDiastolicPressure}}/{{nowSystolicPressure}}</view>
          <view wx:else style="color:red">当前 无</view>
        </view>
        <view wx:if="{{bptask>0}}" class='red-icon icon'>{{bptask}}</view>
      </navigator>
      <navigator class="health_card" style="background-color:#CCFFFF;margin-left:10rpx;" url="../function/bg/bg">
        <text style="margin-left:8rpx;">血糖记录</text>
        <image src="/image/bg_record.png" class="record_png" mode="aspectFit" />
        <view class="target" style="margin-left:50rpx;">
          <view>目标 {{bloodGlucoseGoal}}mmol/L</view>
          <view wx:if="{{nowBloodGlucose!=0}}">当前 {{nowBloodGlucose}}mmol/L</view>
          <view wx:elif="{{nowBloodGlucose==0&&bgtask==0}}">无要求</view>
          <view wx:else style="color:red">当前 无</view>
        </view>
        <view wx:if="{{bgtask>0}}" class='red-icon icon'>{{bgtask}}</view>
      </navigator>
    </view>
    <view class="record">
      <navigator class="health_card" style="background-color:#CCFFCC" url="../function/weight/weight">
        <text style="margin-left:8rpx;">体重记录</text>
        <image src="/image/weight_record.png" class="record_png" mode="aspectFit" style="height:76rpx;width:76rpx;opacity:0.05;"/>
        <view class="target" style="width:100rpx;">
          <text>目标 {{weightGoal}}kg</text>
          <text>当前 {{nowWeight}}kg</text>
        </view>
        <view wx:if="{{weighttask>0}}" class='red-icon icon'>{{weighttask}}</view>
      </navigator>
      <navigator class="health_card" style="background-color:#FFCCCC;margin-left:10rpx;" url="../function/medicine/medicine">
        <text style="margin-left:8rpx;">服药记录</text>
        <image src="/image/drug_record.png" class="record_png" mode="aspectFit" style="opacity:0.3;margin-left:110rpx;"/>
        <view class="target" style="width:100rpx;">
          <view>今日服药</view>
            <view wx:if="{{medtask==0&&todayMed>0}}">已记录</view>
            <view wx:elif="{{medtask==0&&todayMed==0}}">无要求</view>
            <view wx:else style="color:red;">未记录</view>
        </view>
        <view wx:if="{{medtask>0}}" class='red-icon icon'>{{medtask}}</view>
      </navigator>
    </view>
    <view class="last">
      <view>
        <view class="health">膳食与运动记录</view>
        <navigator class="diet" url="../function/eat/eat">
          <text style="margin-left:10rpx;">饮食记录</text>
          <image src="/image/diet_record.png" class="record_png" mode="aspectFit" style="opacity:0.4;margin-left:80rpx;position:relative;"/>
        </navigator>
        <navigator class="sports" url="../function/sports/sports">
          <text style="margin-left:10rpx;">运动记录</text>
          <image src="/image/sports_record.png" class="record_png" mode="aspectFit" style="opacity:0.4;margin-left:80rpx;position:relative;"/>
        </navigator>
      </view>

      <view class="discomfort">
        <view class="health">记录不适症状</view>
        <navigator url="../function/uncomf/uncomf">
          <image class="discomfort_image" mode="aspectFit" src="../../image/discomfort.png" />
        </navigator>
      </view>
    </view>
</view>
